# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Email Service (Resend)
# Get your API key from https://resend.com/api-keys
# In development: emails will be saved but not sent if this is missing
# In production: this is required for email functionality
RESEND_API_KEY=re_Q9qY12TL_2f6XrxwoenhQw9rD6TQJU9sr

# Email Sender Configuration
# In development: you don't need RESEND_FROM; the app will use onboarding@resend.dev
# In production: set RESEND_FROM="LexAtlas <hello@lexatlas.com>" and verify your domain in Resend
RESEND_FROM="LexAtlas <hello@lexatlas.com>"

# Analytics (Plausible)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=lexatlas.com

# Development configuration
# Set to 1 or true to enable fake checkout (no Stripe required)
# Set to 0 or false to use real Stripe checkout
NEXT_PUBLIC_FAKE_CHECKOUT=0

# External Scripts Control
# Set to 1 to disable external scripts (Plausible, Vercel Analytics) in development
# Set to 0 to enable external scripts
NEXT_PUBLIC_DISABLE_EXTERNAL_SCRIPTS=1

# Static asset cache busting (optional)
# Bump this value to force-refresh preview images on the landing page
NEXT_PUBLIC_ASSET_REV=1

# Optional: Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
