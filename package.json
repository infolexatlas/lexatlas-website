{
  "name": "lexatlas-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "node ./scripts/validate-env.js && next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test:e2e": "playwright test",
    "test:vr": "PLAYWRIGHT_VR=1 playwright test tests/visual.spec.ts -g @vr",
    "check:prod-local": "(npx kill-port 3000 || true) && (npm start & echo $! > .next_pid) && npx wait-on http://127.0.0.1:3000 --timeout 180000 && echo '--- HEADERS / ---' && curl -sI http://127.0.0.1:3000/ | cat && echo '\n--- ROBOTS ---' && curl -s http://127.0.0.1:3000/robots.txt | cat && echo '\n--- WP-SITEMAP ---' && curl -sI http://127.0.0.1:3000/wp-sitemap.xml | cat && (kill -9 $(cat .next_pid) || true) && rm -f .next_pid",
    "lighthouse:ci": "lhci autorun",
    "analyze": "ANALYZE=true next build",
    "size": "size-limit",
    "prebuild": "node -e \"process.exit(0)\"",
    "prepare": "husky",
    "check:stripe-live": "tsx scripts/check-stripe.ts"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.15",
    "@sentry/nextjs": "^10.15.0",
    "@stripe/stripe-js": "^7.8.0",
    "@types/d3": "^7.4.3",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "d3-geo": "^3.1.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "next-intl": "^4.3.4",
    "next-seo": "^6.8.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "resend": "2.1.0",
    "stripe": "^18.4.0",
    "tailwind-merge": "^3.3.1",
    "topojson-client": "^3.1.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.13.0",
    "@next/bundle-analyzer": "^15.5.2",
    "@playwright/test": "^1.46.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@size-limit/file": "^11.2.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/d3-geo": "^3.1.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.11.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/topojson-client": "^3.1.5",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "husky": "^9.1.7",
    "license-checker-rseidelsohn": "^4.4.2",
    "lighthouse": "^12.8.2",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "sharp": "^0.34.3",
    "size-limit": "^11.2.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "vercel": "^48.0.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.11.0 <21"
  }
}
