# ===========================================
# LexAtlas Production Environment Template
# ===========================================
# Copy this file to .env.production and fill in the actual values
# DO NOT commit .env.production to version control

# ===========================================
# REQUIRED - Site Configuration
# ===========================================
NEXT_PUBLIC_SITE_URL=https://lex-atlas.com
NEXT_PUBLIC_BASE_URL=https://lex-atlas.com

# ===========================================
# REQUIRED - Analytics & Tracking
# ===========================================
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=lex-atlas.com
# NEXT_PUBLIC_GA4_ID=G-XXXXXXXXXX  # Optional: Google Analytics 4
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX   # Optional: Google Tag Manager

# ===========================================
# REQUIRED - Vercel Configuration
# ===========================================
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id

# ===========================================
